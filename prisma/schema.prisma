generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StoryStatus {
  BACKLOG
  READY
  IN_PROGRESS
  BLOCKED
  REVIEW
  DONE
  ARCHIVED
}

enum CalendarView {
  MONTH
  WEEK
  TWO_WEEK
}

model User {
  id              String            @id @default(cuid())
  email           String            @unique
  name            String?
  image           String?
  passwordHash    String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  accounts        Account[]
  sessions        Session[]
  stories         Story[]           @relation("StoryOwner")
  assignments     Story[]           @relation("StoryAssignee")
  storyAssignees  StoryAssignee[]
  calendarPrefs   CalendarPreference?
  apiTokens       ApiToken[]
}

model Story {
  id          String            @id @default(cuid())
  title       String
  description String?
  status      StoryStatus       @default(BACKLOG)
  priority    Int               @default(3)
  effort      Int?
  ownerId     String
  owner       User              @relation("StoryOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  assigneeId  String?
  assignee    User?             @relation("StoryAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  assignees   StoryAssignee[]
  parentId    String?
  parent      Story?            @relation("ParentChild", fields: [parentId], references: [id], onDelete: Cascade)
  children    Story[]           @relation("ParentChild")
  startDate   DateTime?
  dueDate     DateTime?
  position    Int               @default(0)
  tags        StoryTag[]
  checkpoints Checkpoint[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([ownerId, status, position])
  @@index([assigneeId])
  @@index([dueDate])
}

model StoryAssignee {
  id       String   @id @default(cuid())
  storyId  String
  story    Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedAt DateTime @default(now())

  @@unique([storyId, userId])
  @@index([storyId])
  @@index([userId])
}

model StoryTag {
  id      String @id @default(cuid())
  label   String
  color   String @default("#0EA5E9")
  story   Story  @relation(fields: [storyId], references: [id], onDelete: Cascade)
  storyId String

  @@index([storyId])
}

model Checkpoint {
  id        String   @id @default(cuid())
  content   String
  completed Boolean  @default(false)
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model CalendarPreference {
  id           String        @id @default(cuid())
  defaultView  CalendarView  @default(MONTH)
  weekStartsOn Int           @default(1)
  workingDays  Int           @default(62)
  userId       String        @unique
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ApiToken {
  id        String   @id @default(cuid())
  label     String
  secret    String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  revokedAt DateTime?
}
